{
  "name": "@drone/monorepo",
  "version": "0.1.0-beta.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "convex",
    "packages/**/*",
    "tools/*"
  ],
  "scripts": {
    "context": "bun run --filter @cfd/scripts context",
    "facts:extract": "ENABLE_GRAPHITI=true bun run --elide-lines 0 --env-file ./.env --filter @cfd/fact-extractor all",
    "facts:extract:local": "ENABLE_GRAPHITI=false RESUME_FROM_POSITION=0 bun run --elide-lines 0 --env-file ./.env --filter @cfd/fact-extractor all",
    "facts:extract:local:auto-resume": "RESUME_FROM_POSITION=266508 ENABLE_GRAPHITI=false bun run --elide-lines 0 --env-file ./.env --filter @cfd/fact-extractor auto-resume"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {},
  "trustedDependencies": [],
  "dependencies": {}
}
